        .social-login
          a(href='#').btn.social-login__btn.social-login__btn--facebook
            i.icon.icon-social-logic-fb
            span CONTINUE WITH FACEBOOK
          a(href='#').btn.social-login__btn.social-login__btn--google
            i.icon.icon-social-logic-gp
            span CONTINUE WITH GOOGLE +
                          

